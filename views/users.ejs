<%- include('partials/header.ejs') %>
<%- include('admintop.ejs') %>	
<style>
	.table-data{
    flex-direction: column;
}
</style>														
	<hr>
	<main>
<div class="table-data">
<%  Details.forEach((data,index) => { %>	
	

	<div class="wrapper">
		<div class="left">
			<br><br>
			<h1><%=index+1%></h1>
			<br><br>		<h3><%=data.name%></h3>
			
			<hr>			
			
			
		</div>
		<div class="right">
			<div class="info">
				<h3>Information</h3>
				<div class="info_data">
					
					
					<div class="data">
						<h4>College</h4>
						<p><%=data.college%></p>
					</div>
					<div class="data">
						<h4>Transaction ID</h4>
						<p><%=data.transactionID%></p>
					</div>
					<div class="data">
						<h4>Insta Handle</h4>
						<p><%=data.instaHandle%></p>
					</div>
					<div class="data">
						<h4>Current Year</h4>
						<p><%=data.yearOfStudy%></p>
					</div>
					<div class="data">
						<h4>Phone</h4>
						<p><%=data.number%></p>
					</div>
					<div class="data">
						<h4>Email</h4>
						<p> <%=data.email%></p>
					</div>
				</div>
			</div>
		
			<div class="projects">
				<h3>Orders</h3>
				
				<div class="projects_data">

					
					<div class="data">
						<h4>Title</h4>
					
						<%  data.userCart.cartItems.forEach((datas) => { %>
							<% if(datas.verifyStatus===true) {%>
								<p><%=datas.title%></p>
										<%}%>
							
							<% }); %>
						</div>
						<div class="data">
							<h4>Type</h4>
						
							<%  data.userCart.cartItems.forEach((datas) => { %>
								<% if(datas.verifyStatus===true) {%>
									<p><%=datas.Type%></p>
											<%}%>
								
								<% }); %>
							</div>
						<div class="data">
							<h4>Price</h4>
							<%  data.userCart.cartItems.forEach((datas) => { %>
								<% if(datas.verifyStatus===true) {%>
								<p> <%=datas.price%></p>
								<%}%>
									
								<% }); %>
							</div>
							<div class="data">
								<h4>Payment</h4>
								<%  data.userCart.cartItems.forEach((datas) => { %>
									<% if(datas.verifyStatus===true) {%>
										<p><i class="fa-solid fa-file-invoice"></i><i class="fa-solid fa-check-double"></i></p>
										
										<%}%>
									
									
									<% }); %>
								</div>
								<div class="data">
									<h4> Genre</h4>
									<%  data.userCart.cartItems.forEach((datas) => { %>
										<% if(datas.verifyStatus===true) {%>
											
											<p>	<%=datas.genre%></p>
											<%}%>
										
										<% }); %>
									</div>
									<div class="data">
										<h4>Prize</h4>
										<%  data.userCart.cartItems.forEach((datas) => { %>
											<% if(datas.verifyStatus===true) {%>
											
												<p>	<%=datas.prize%></p>
												<form action="/events/<%=datas.title%>" method="get">
													<button type="submit" class="btn btn-primary">Event Details</button>
												</form>
												<%}%>
										
											
										
											<% }); %>
											
										</div>
										
									</div>
								</div>
								
								<div class="social_media">
									
								</div>
							</div>
						</div>	<% }); %>
						
					</div>			
				
																		<%- include('partials/footer.ejs') %>																		